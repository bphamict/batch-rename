<Window x:Class="Batch_Rename.NewCaseArgsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Batch_Rename"
        mc:Ignorable="d"
        Title="New Case Args Dialog" Height="200" Width="250">
    <Canvas>
        <TextBlock Canvas.Left="20" Canvas.Top="20" FontSize="14">Choose type of file name</TextBlock>
        <RadioButton Name="Btn_1" Content="To Upper Case" Canvas.Left="20" Canvas.Top="50" FontSize="14"/>
        <RadioButton Name="Btn_2" Content="To Lower Case" Canvas.Left="20" Canvas.Top="68" FontSize="14"/>
        <RadioButton Name="Btn_3" Content="To Upper Case first letter" Canvas.Left="20" Canvas.Top="86" FontSize="14"/>
        <StackPanel Orientation="Horizontal" Canvas.Left="50" Canvas.Top="120">
            <Button Click="Ok_Btn_Click" Content="OK" Width="70" Height="30"/>
            <Button Click="Close_Btn_Click" Content="Close" Width="70" Height="30" Margin="5 0 0 0 "/>
        </StackPanel>
    </Canvas>
</Window>
