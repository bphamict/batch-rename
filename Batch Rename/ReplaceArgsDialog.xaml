<Window x:Class="Batch_Rename.ReplaceArgsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Batch_Rename"
        mc:Ignorable="d"
        Title="Replace Args Dialog" Height="200" Width="250">
    <Canvas>
        <Label Canvas.Left="20" Canvas.Top="20" FontSize="14">Enter string need to Replaced</Label>
        <TextBox Name="Needle_TextBox" Width="200" Canvas.Left="20" Canvas.Top="50"/>
        <Label Canvas.Top="70" Canvas.Left="20" FontSize="14">Enter string would be Replaced</Label>
        <TextBox Name="Hammer_TextBox" Width="200" Canvas.Left="20" Canvas.Top="100"/>
        <StackPanel Orientation="Horizontal" Canvas.Left="50" Canvas.Top="130">
            <Button Content="OK" Width="70" Click="Ok_Btn_Click"/>
            <Button Content="Close" Width="70" Click="Close_Btn_Click" Margin="5 0 0 0"/>
        </StackPanel>
    </Canvas>
</Window>
